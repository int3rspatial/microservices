@model IEnumerable<TaskViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tasks</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Task" asp-action="Create" class="btn btn-primary">
                Add new Task
            </a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Estimated time (hours)
            </th>
            <th>
                Priority
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="20%">
                    @item.Title
                </td>
                <td width="40%">
                    @item.Description
                </td>
                <td width="20%">
                    @item.EstimatedTime
                </td>
                <td width="10%">
                    @item.TaskPriority
                </td>
                <td width="10%">
                    @item.TaskStatus
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Task" asp-action="Edit" asp-route-id="@item.Id"
                        class="btn btn-primary mx-2">Edit</a>
                    </div>
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Task" asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>

</div>